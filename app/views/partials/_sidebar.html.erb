<div class="col-md-2">
  <h3>My Folders</h3>
  <ul>
    <% @user.folders.each do |f| %>
      <h4>
        <li><%= link_to f.name, folder_path(:id => @user.id, :folderid => f.id) %></li>
      </h4>
    <% end %>
  </ul>
  <% if !params[:folderid] %>
    <%= link_to 'Add Folder', new_folder_path(:id => @user.id) %>
  <% end %>
</div>
