<%= form_for @user, :html => {class: 'edit_user form-horizontal'} do |f| %>
    <div class="row"><legend class="col-md-4 col-md-offset-4">Edit Profile:</legend></div>
    <fieldset>
        <div class="form-group">
            <%= f.label :title, 'Username', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :user_name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :description, 'Full Name', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :full_name, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :source, 'Password', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :source, 'Confirm Password', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Edit Profile', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>
