<h1>Welcome <%= @user.full_name %>!</h1>

<h2>My Videos</h2>
<% @user.videos.each do |v| %>
  <div class="video-container">
    <h3><%= v.title %></h3>
    <%= v.source.html_safe %>
    <p><%= v.description %></p>
    <%= link_to 'Add To Folder', video_folder_path(:id => v.id)  %>
    <%= link_to 'Edit Video', edit_video_path(:id => v.id) %>
    <%= link_to 'Delete Video', video_path(:id => v.id), method: 'DELETE', data: {confirm: "Are you sure you want to delete this video?"} %>
  </div>
<% end %>

<%= link_to 'Add Video', new_video_path %>

<h3>My Folders</h3>
<ul>
  <% @user.folders.each do |f| %>
    <li><%= link_to f.name, folder_path(:id => @user.id, :folderid => f.id) %></li>
  <% end %>
</ul>
<%= link_to 'Add Folder', new_folder_path(:id => @user.id) %>
