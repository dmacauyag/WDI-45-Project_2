<%= form_for @video, :html => {class: 'new_video form-horizontal'} do |f| %>
    <div class="row"><legend class="col-md-4 col-md-offset-4">Edit Video:</legend></div>
    <fieldset>
        <div class="form-group">
            <%= f.label :title, 'Title', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :title, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :description, 'Description', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :description, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :source, 'Video URL', class: 'col-md-4 control-label' %>
            <div class="col-md-5">
                <%= f.text_field :source, class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <%= f.submit 'Edit Video', class: 'btn btn-success' %>
            </div>
        </div>
    </fieldset>
<% end %>
